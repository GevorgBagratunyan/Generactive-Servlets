<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:postgresql://localhost:5432/jdbc:h2:mem:test_db;DB_CLOSE_DELAY=-1;DATABASE_TO_UPPER=false</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">123456</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

<!--        &lt;!&ndash; 'show_sql' set true to check sql statements on console else set to false &ndash;&gt;-->
<!--        <property name="show_sql">true</property>-->
<!--        <property name="format_sql">true</property>-->
<!--        &lt;!&ndash; use 'create' to Create tables on application startup else use 'update'&ndash;&gt;-->
<!--        <property name="hbm2ddl.auto">update</property>-->

<!--        &lt;!&ndash; JDBC connection pool &ndash;&gt;-->
<!--        <property name="connection.pool_size">5</property>-->
<!--        <property name="current_session_context_class">thread</property>-->

        <!-- Domain Model classes to be mapped -->
        <mapping class="com.generactive.model.Item"/>
        <mapping class="com.generactive.model.GenerativeItem"/>
        <mapping class="com.generactive.model.StockItem"/>
        <mapping class="com.generactive.model.Group"/>

    </session-factory>
</hibernate-configuration>